{
  "compileOnSave": false,
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@cat-match/data-access": ["libs/data-access/src/index.ts"],
      "@cat-match/feature-game": ["libs/feature-game/src/index.ts"],
      "@cat-match/jiji": ["libs/jiji/src/index.ts"],
      "@cat-match/shared-testing": ["libs/shared-testing/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
